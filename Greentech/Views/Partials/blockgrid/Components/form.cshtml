@inherits UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<ContentModels.Form>>

@{
    const int TITLE_AREA = 0;
}
<section class="page-section" id="contact">
    <div class="container">
        <div class="col-12 text-white mb-4">
            @await Html.GetBlockGridItemAreaHtmlAsync(Model.Areas.ElementAt(TITLE_AREA))
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                @await Component.InvokeAsync("Contact")
            </div>
        </div>
    </div>
</section>