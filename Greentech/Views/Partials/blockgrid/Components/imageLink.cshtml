@inherits UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<ContentModels.ImageLink>>

@{
    @section styles{

    }
    if (Model?.Content?.Image == null) return;
}

<div class="col-md-6 col-lg-4 mb-5">
    <div class="text-center mb-2">
        <h5>@Model.Content.Title</h5>
    </div>

    <div class="portfolio-item mx-auto" data-bs-toggle="modal" data-bs-target="#portfolioModal-@Model.Content.Key">
        <div class="d-flex align-items-center justify-content-center h-100 w-100">
        </div>
        <img class="portfolio-image img-fluid w-100 h-100 lazyload"
             data-srcset="@Url.GetSrcSetUrls(Model.Content.Image, 400, 290)"
             sizes="auto"
             src="@Model.Content.Image.GetCropUrl(40, 29)"
             alt="@Model.Content.Image.GetAltText()" />
    </div>
</div>

<div class="portfolio-modal modal fade" id="portfolioModal-@Model.Content.Key" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-0">
            <div class="modal-header border-0 position-absolute end-0 top-0 pt-4 pe-4 z-3">
                
            </div>

            <div class="modal-body p-0">
                <div class="row g-0">
                    <div class="col-md-5 bg-dark modal-image-mobile">
                        <img src="@Model.Content.Modalimage.GetCropUrl(600, 800)"
                             class="img-fluid h-100 w-100 object-fit-cover"
                             alt="@Model.Content.Modalimage.GetAltText()"
                             style="min-height: 400px;">
                    </div>
                    <div class="col-md-7 d-flex flex-column p-5">
                        <h2 class="mb-4 pb-3 position-relative">
                            @Model.Content.Modaltitle
                            <span class="position-absolute bottom-0 start-0 bg-primary"
                                  style="height: 3px; width: 80px;"></span>
                        </h2>

                        <div class="flex-grow-1 pe-3" style="overflow-y: auto; max-height: 400px;">
                            <div class="text-muted lh-lg">
                                @Html.Raw(Model.Content.Modalcontent)
                            </div>
                        </div>
                        <div class="mt-4 pt-3 border-top">
                            <button class="btn btn-outline-primary px-4" data-bs-dismiss="modal">
                                <i class="fas fa-times me-2"></i>
                                Stäng
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>